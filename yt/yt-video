#!/usr/bin/env bash
# ? description: Download video.
# ? usage      : yt-video [url|file]

source "_yt-dlp"

[ $# -lt 1 ] && _params_required 1 && exit 1

_log "Descargando video $1"

# Opciones comunes para yt-dlp
yt_dlp_opts=(
	--embed-metadata
	--progress
    --windows-filenames
	-f "bv*+ba/b" -S "res:1080,ext:mp4:m4a"
)
if [[ $1 =~ $playlist_regex ]]; then
	yt-dlp -w "${yt_dlp_opts[@]}" \
		-o "$(xdg-user-dir DOWNLOAD)/%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s" $@
elif [[ $1 =~ $video_regex ]]; then
	yt-dlp --no-playlist "${yt_dlp_opts[@]}" --quiet \
		-o "$(xdg-user-dir DOWNLOAD)/%(title)s.%(ext)s" $@
elif [ -f "$1" ]; then
    while IFS= read -r line; do
		[ -z "$line" ] && continue
		yt-video "$line"
	done < "$1"
fi

[ $? -eq 0 ] && _success "Video descargado" || _error "Error al descargar"
