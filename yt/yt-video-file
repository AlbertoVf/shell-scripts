#!/usr/bin/env bash
##? usage : yt-video-file [file]
##? help  : Download all video from url save in file.

source "$HOME/.bin/_main.sh"

if [[ $# -lt 1 ]]; then
	_params_required 1
	exit 1
fi

yt-dlp --no-playlist \
	--embed-metadata \
	--quiet --progress \
	-f mp4 \
	-o "$(xdg-user-dir DOWNLOAD)/%(title)s.%(ext)s" \
	--batch-file $@

if [ $? -eq 0 ]; then
	_success "Videos descargado"
else
	_error "Error al descargar"
fi
