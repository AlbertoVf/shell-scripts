#!/usr/bin/env bash
##? usage : yt-video-list [url]
##? help  : Download video playlist.

source "$HOME/.bin/_main.sh"

if [[ $# -lt 1 ]]; then
	_params_required 1
	exit 1
fi

yt-dlp -w \
	--embed-metadata \
	--quiet --progress \
	-f mp4 \
	-o "$(xdg-user-dir DOWNLOAD)/%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s" $@

if [ $? -eq 0 ]; then
	_success "Videos descargado"
else
	_error "Error al descargar"
fi
