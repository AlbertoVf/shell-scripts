#!/usr/bin/env sh
# ? description: Compress files or directories into a separated files.
# ? usage      : compress_separated [file(s)|directory(s)]

. "$HOME/.bin/_main.sh"

[ $# -lt 1 ] && _params_required 1 && exit 1

for i in "$@"; do
	input="$i"
	name=$(basename "$input")
	if [ -f "$input" ]; then
		name="${name%.*}"
	fi
	compress_folder=$name

	apack "$compress_folder.tar.gz" "$input"

	[ $? -eq 0 ] && _success "$compress_folder comprimido correctamente." || _error "Error al comprimir."
done
