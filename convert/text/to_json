#!/usr/bin/env sh
# ? description: Transform to json format.
# ? usage      : to_json [yaml(s)|csv(s)]

. "$HOME/.bin/_main.sh"

[ $# -lt 1 ] && _params_required 1 && exit 1

for f in "$@"; do
    archivo="$f"
    base="${archivo%.*}"
    ext="${archivo##*.}"

    if [ "$ext" = "yaml" ] || [ "$ext" = "csv" ]; then
        yq -P -o=json "$archivo" > "$base.json"
    else
        _error "Error al convertir"
        exit 0
    fi

    [ $? -eq 0 ] && _success "Convertido a json"

done
